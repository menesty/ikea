<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="ikea" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>org.menesty.ikea.domain.User</class>
        <class>org.menesty.ikea.domain.PackageInfo</class>
        <class>org.menesty.ikea.domain.ProductPart</class>
        <class>org.menesty.ikea.domain.ProductInfo</class>
        <class>org.menesty.ikea.domain.CustomerOrder</class>
        <class>org.menesty.ikea.domain.OrderItem</class>
        <class>org.menesty.ikea.domain.InvoicePdf</class>
        <class>org.menesty.ikea.processor.invoice.RawInvoiceProductItem</class>
        <class>org.menesty.ikea.processor.invoice.InvoiceItem</class>
        <class>org.menesty.ikea.domain.IkeaParagon</class>

        <properties>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:data/db/ikea"/>
            <property name="javax.persistence.jdbc.user" value="menesty"/>
           <!-- <property name="eclipselink.logging.level" value="FINE"/>-->
            <property name="javax.persistence.jdbc.password" value="ikea-desktop-1"/>
        </properties>
    </persistence-unit>
</persistence>
<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="ikea-test" transaction-type="RESOURCE_LOCAL">
        <provider>org.batoo.jpa.core.BatooPersistenceProvider</provider>
        <class>org.menesty.ikea.domain.User</class>
        <class>org.menesty.ikea.domain.PackageInfo</class>
        <class>org.menesty.ikea.domain.ProductPart</class>
        <class>org.menesty.ikea.domain.ProductInfo</class>
        <class>org.menesty.ikea.domain.CustomerOrder</class>
        <class>org.menesty.ikea.domain.OrderItem</class>
        <class>org.menesty.ikea.domain.InvoicePdf</class>
        <class>org.menesty.ikea.processor.invoice.RawInvoiceProductItem</class>
        <class>org.menesty.ikea.processor.invoice.InvoiceItem</class>

        <properties>
            <property name="org.batoo.jpa.ddl" value="UPDATE"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:test"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <!--<property name="org.batoo.jpa.sql_logging" value="STDOUT" />-->
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>